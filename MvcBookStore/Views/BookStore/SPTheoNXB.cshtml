@model IEnumerable<MvcBookStore.Models.SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Sách theo nhà xuất bản</h2>
<div class="row">
    @foreach (var sach in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <ul class="product_box">
                <a href="@Url.Action("Details", "BookStore", new { id = sach.Masach })">
                    <div class="hinhanh_sanpham">
                        <img alt="@sach.Tensach" src="~/Hinhsanpham/@sach.Anhbia" width="85%" height="250px" />
                    </div>
                    <div>
                        <br />
                        <h4 style="margin:0">
                            @sach.Tensach
                        </h4>

                        <p></p>
                        <div class="ratings">
                            <p class="pull-right">16 reviews</p>
                            <p>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>

                            </p>
                        </div>
                    </div>
            </ul>
        </div>
    }
</div>



